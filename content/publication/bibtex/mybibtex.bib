	keywords = {Absorptiometry, Photon, Adiposity, Adolescent, Adult, Aged, Aged, 80 and over, Body Composition, Body Height, Body Mass Index, Body Weight, Electric Impedance, Female, Humans, Male, Middle Aged, Models, Biological, Reproducibility of Results, Sex Factors},
