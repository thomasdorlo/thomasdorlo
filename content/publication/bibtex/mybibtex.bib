	journal = {Antimicrobial Agents and Chemotherapy},
	author = {Dorlo, Thomas P C and van Thiel, Pieter P A M and Huitema, Alwin D R and Keizer, Ron J and de Vries, Henry J C and Beijnen, Jos H and de Vries, Peter J},
	month = aug,
