	journal = {Clinical Infectious Diseases: An Official Publication of the Infectious Diseases Society of America},
	author = {González, Urbà and Pinart, Mariona and Reveiz, Ludovic and Rengifo-Pardo, Monica and Tweed, Jack and Macaya, Antonio and Alvar, Jorge},
	month = aug,
