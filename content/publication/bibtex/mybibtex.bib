	journal = {The Lancet Global Health},
	author = {Pedrique, Belen and Strub-Wourgaft, Nathalie and Some, Claudette and Olliaro, Piero and Trouiller, Patrice and Ford, Nathan and Pécoul, Bernard and Bradol, Jean-Hervé},
