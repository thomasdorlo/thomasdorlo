@article{murray_leishmaniasis_2012,
	title = {Leishmaniasis in the {United} {States}: treatment in 2012},
	volume = {86},
	issn = {1476-1645},
	shorttitle = {Leishmaniasis in the {United} {States}},
	url = {http://www.ncbi.nlm.nih.gov/pubmed/22403313},
