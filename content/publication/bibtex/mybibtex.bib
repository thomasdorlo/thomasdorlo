@article{sundar_oral_2013,
	title = {Oral miltefosine for {Indian} post-kala-azar dermal leishmaniasis: a randomised trial},
	volume = {18},
	issn = {1365-3156},
	shorttitle = {Oral miltefosine for {Indian} post-kala-azar dermal leishmaniasis},
	doi = {10.1111/tmi.12015},
	abstract = {OBJECTIVE: Standard treatment of Indian post-kala-azar dermal leishmaniasis (PKDL) is unsatisfactory because to achieve therapeutic effectiveness, heroic courses of parenteral and toxic agents have to be administered. Our objective was to evaluate oral miltefosine for its potential to provide effective as well as tolerable treatment for this disease.
