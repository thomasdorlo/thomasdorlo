	journal = {European Journal of Drug Metabolism and Pharmacokinetics},
	author = {Prasad, V. Gangadhara N. V. and Achanta, Satyanarayana and Tammineni, Yathiraja Rao and Alla, Gopala Reddy and Thirtham, Madhava Rao and Rao, G. S.},
