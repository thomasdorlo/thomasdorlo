	month = jun,
	year = {2011},
	pmid = {21302010},
	pmcid = {PMC3085712},
	keywords = {Computer Simulation, Drug Monitoring, Humans, Models, Biological, Nonlinear Dynamics, Pharmaceutical Preparations, Pharmacokinetics},
	pages = {143--151}
}

