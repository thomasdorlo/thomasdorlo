	author = {Beal, S. L.},
	month = oct,
	year = {2001},
	pmid = {11768292},
	keywords = {Analysis of Variance, Likelihood Functions, Models, Chemical, Normal Distribution, Pharmacokinetics, Reproducibility of Results, Sample Size, Stochastic Processes},
