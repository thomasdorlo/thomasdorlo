	journal = {Proceedings of the National Academy of Sciences},
	author = {Cummings, Hannah E. and Barbi, Joseph and Reville, Patrick and Oghumu, Steve and Zorko, Nicholas and Sarkar, Anasuya and Keiser, Tracy L. and Lu, Bao and Rückle, Thomas and Varikuti, Sanjay and Lezama-Davila, Claudio and Wewers, Mark D. and Whitacre, Caroline and Radzioch, Danuta and Rommel, Christian and Seveau, Stéphanie and Satoskar, Abhay R.},
