	keywords = {Adult, Antimony Sodium Gluconate, Antiprotozoal Agents, Comorbidity, Ethiopia, HIV Infections, Humans, Leishmaniasis, Visceral, Male, Phosphorylcholine, Prevalence, Treatment Outcome},
