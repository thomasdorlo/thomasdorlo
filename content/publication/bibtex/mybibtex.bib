@article{chrusciak-talhari_randomized_2011,
	title = {Randomized controlled clinical trial to access efficacy and safety of miltefosine in the treatment of cutaneous leishmaniasis {Caused} by {Leishmania} ({Viannia}) guyanensis in {Manaus}, {Brazil}},
