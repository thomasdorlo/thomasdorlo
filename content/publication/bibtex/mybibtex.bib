	pmcid = {PMC4717667},
	file = {PubMed Central Full Text PDF:C\:\\Users\\t.dorlo\\Dropbox\\Zotero\\storage\\NSJTF8U3\\Cherif et al. - 2016 - Distribution of FcγR gene polymorphisms among two .pdf:application/pdf}
}

@article{van_blitterswijk_anticancer_2008,
	title = {Anticancer {Alkylphospholipids}: {Mechanisms} of {Action}, {Cellular} {Sensitivity} and {Resistance}, and {Clinical} {Prospects}},
