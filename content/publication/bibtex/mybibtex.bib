@article{lucas_targeting_2010,
	title = {Targeting the {PI}3K/{Akt} {Cell} {Survival} {Pathway} to {Induce} {Cell} {Death} of {HIV}-1 {Infected} {Macrophages} with {Alkylphospholipid} {Compounds}},
	volume = {5},
	issn = {1932-6203},
