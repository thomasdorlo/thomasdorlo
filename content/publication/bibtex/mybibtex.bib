	urldate = {2012-01-18},
	journal = {The British Journal of Dermatology},
	author = {Zerpa, O and Ulrich, M and Blanco, B and Polegre, M and Avila, A and Matos, N and Mendoza, I and Pratlong, F and Ravel, C and Convit, J},
