	journal = {CMAJ: Canadian Medical Association journal = journal de l'Association medicale canadienne},
	author = {Eom, Chun-Sick and Jeon, Christie Y and Lim, Ju-Won and Cho, Eun-Geol and Park, Sang Min and Lee, Kang-Sook},
