@article{bartelink_effect_2015,
	title = {The {Effect} of {Malnutrition} on the {Pharmacokinetics} and {Virologic} {Outcomes} of {Lopinavir}, {Efavirenz} and {Nevirapine} in {Food} {Insecure} {HIV}-infected {Children} in {Tororo}, {Uganda}},
