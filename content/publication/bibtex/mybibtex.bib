	author = {Cherif, Mariama and Amoako-Sakyi, Daniel and Dolo, Amagana and Pearson, Jan-Olov and Gyan, Ben and Obiri-Yeboah, Dorcas and Nebie, Issa and Sirima, Sodiomon B. and Doumbo, Ogobara and Troye-Blomberg, Marita and Bakary, Maiga},
	month = jan,
	year = {2016},
	pmid = {26785902},
	pmcid = {PMC4717667},
